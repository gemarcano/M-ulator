{
  "compilerOptions": {
    "lib": [
      "DOM",
      "es2020",
    ],
    "module": "commonjs",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": false,
    "strict": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "scaffold/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}